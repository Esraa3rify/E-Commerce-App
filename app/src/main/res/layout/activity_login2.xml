<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thirdloginback"
       tools:context=".LoginActivity2">


<ImageView
            android:id="@+id/login_logo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@drawable/applogo"/>

    <EditText
        android:id="@+id/loginPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputdesign"
        android:hint="Phone number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/purple_200"
        android:textColorHint="@color/purple_200"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/loginPassNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginPhoneNum"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputdesign"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/purple_200"
        android:textColorHint="@color/purple_200"
        android:textSize="17sp"
        android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/loginPassNum"
            android:layout_marginTop="5dp"
            >


            <com.rey.material.widget.CheckBox
                android:id="@+id/rememberMeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Material.Drawable.CheckBox"
                android:text="Remember Me"
                android:textColor="@color/purple_200"
                app:cbd_strokeColor="@color/purple_200"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="17dp"
                android:layout_below="@id/loginPassNum"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/ForgetPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginPassNum"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="17dp"
                android:text="Forget Password!"
                android:textColor="@color/purple_200"
                android:textSize="17sp"
                android:textStyle="bold"/>


        </LinearLayout>


    <Button
        android:id="@+id/secLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPassNum"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/AdminBanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secLoginBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="23dp"
        android:text="I am An Admin."
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NotAdminBanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secLoginBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="23dp"
        android:text="I am Not An Admin."
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />





    </RelativeLayout>